{
  "$schema": "http://json.schemastore.org/template",
  "author": "Kashif Jamal Soofi",
  "classifications": ["Web", "WebAPI"],
  "name": "ASP.NET Core Web API Service Template",
  "identity": "Template.WebApi.CSharp",
  "shortName": "webapi-service",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "exclude": [".vs/**/*", "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.lock.json"],
  "symbols": {
    "serviceName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Template",
      "fileRename": "Template"
    },
    "serviceNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "serviceName",
        "toLower": true
      },
      "replaces": "template"
    },
    "aggregateName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "AggregateName",
      "fileRename": "AggregateName",
      "defaultValue": "Example"
    },
    "aggregateNameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "aggregateName",
        "toLower": true
      },
      "replaces": "aggreatename"
    },
    "includeHost": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "includeDb": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "createdDate": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyyMMdd_HHmm"
      },
      "replaces": "yyyyMMdd_HHmm",
      "fileRename": "yyyyMMdd_HHmm"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!includeHost)",
          "exclude": [ "src/Template.Host/**/*" ]
        },
        {
          "condition": "(includeHost)",
          "exclude": [ "src/Template.Api/Handlers/*CommandHandler.cs" ]
        },
        {
          "condition": "(!includeDb)",
          "exclude": [ "db/**/*" ]
        }
      ]
    }
  ]
}