{
    "$schema": "http://json.schemastore.org/template",
    "author": "Kashif Jamal Soofi",
    "classifications": [ "Web/WebApi" ],
    "name": "ASP.NET Core Web API Service Template",
    "identity": "Template.WebApi.CSharp",
    "groupIdentity": "Template.WebApi",
    "shortName": "webapi-service",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "exclude": [ ".vs/**/*", "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.lock.json" ],
    "symbols": {
        "serviceName": {
            "type": "parameter",
            "datatype": "string",
            "required": true,
            "replaces": "Template",
            "fileRename": "Template"
        },
        "aggregateName": {
            "type": "parameter",
            "datatype": "string",
            "isRequired": true,
            "replaces": "AggregateName",
            "fileRename": "AggregateName",
            "defaultValue": "Example"
        },
        "includeHost": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "includeDb": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
    },
    "sources": [{
        "modifiers": [
            {
                "condition": "(!includeHost)",
                "exclude": [ "src/Template.Host/**/*" ]
            },
            {
                "condition": "(!includeDb)",
                "exclude": [ "db/**/*" ]
            }
        ]
    }]
}